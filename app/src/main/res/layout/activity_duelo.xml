<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cdp.mispartidas.actividades.Duelo">
    
        <LinearLayout 
            android:id="@+id/botonesizquierda"
            android:layout_alignParentLeft="true"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="vertical" >
            
        </LinearLayout>
        
        <TextView  
            android:id="@+id/nombreduelo"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/botonesizquierda"
            android:layout_toLeftOf="@+id/botonesderecha"
            android:gravity="center_vertical|center_horizontal|center"
            android:layout_gravity="center"
        />
            
        <TextView  
            android:id="@+id/tantosduelo"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/botonesizquierda"
            android:layout_toLeftOf="@+id/botonesderecha"
            android:gravity="center_vertical|center_horizontal|center"
            android:layout_below="@+id/nombreduelo"
            android:layout_gravity="center"
        />    
    
        <LinearLayout 
            android:id="@+id/botonesderecha"
            android:layout_alignParentLeft="true"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="vertical" >

                <ImageButton android:id="@+id/sumar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_add_white_24dp"
                    android:background="@drawable/botonredondo"
                    android:scaleType="fitXY"
                    android:padding="10dp"
                    android:layout_gravity="top"/>
                    
                <ImageButton android:id="@+id/restar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_remove_white_24dp"
                    android:background="@drawable/botonredondo"
                    android:scaleType="fitXY"
                    android:padding="10dp"
                    android:layout_gravity="bottom"/>    

        </LinearLayout>

</RelativeLayout>
